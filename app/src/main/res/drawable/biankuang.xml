<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:dither="true" android:shape="rectangle">
            <solid android:color="@color/blue_black" />
            <stroke android:color="@color/dark" android:width="1dp" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/black_grey" />
            <corners android:radius="30dp" />
            <size android:width="100dp" android:height="20dp" />
        </shape >
    </item >
</layer-list >
